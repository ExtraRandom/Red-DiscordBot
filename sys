#!/bin/bash
# Version 0.3

DIR="Red-DiscordBot"
BOT="red.py"
HELP="Args: git, bot, kill"

if [ -z "$*" ]; then
	echo $HELP
else
    if [ "$1" = "git" ]; then
        cd $DIR
        git pull
        cd ..
		echo "Run ./run to update 'sys's"
    elif [ "$1" = "bot" ]; then
        cd $DIR
        python3 $BOT &
		cd ..
    elif [ "$1" = "kill" ]; then
        pkill -f red.py
    else
        echo $HELP
    fi
fi
