#!/bin/bash
# Version 0.2

DIR="Red-DiscordBot"
BOT="red.py"
HELP="Args: git, bot"

if [ -z "$*" ]; then
	echo $HELP
else
    if [ "$1" = "git" ]; then
        cd $DIR
        git pull
        cd ..
    elif [ "$1" = "bot" ]; then
        cd $DIR
        python3 $BOT &
    elif [ "$1" = "kill" ]
        kill -f red.py
    else
        echo $HELP
    fi
fi
